<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ContactsDetailsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilec"
        android:layout_width="234dp"
        android:layout_height="194dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/noimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewnamec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/imgProfilec"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewphonec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="36dp"
        android:text="Contact no"
        app:layout_constraintStart_toEndOf="@+id/imgProfilec"
        app:layout_constraintTop_toBottomOf="@+id/textViewnamec" />



</androidx.constraintlayout.widget.ConstraintLayout>